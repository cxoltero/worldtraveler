          <td><input type="submit" value="Start searching!">
          </table>
          </form>
      </div>
    <script type="text/javascript">
            var options = {};
            var autocomplete1 = new r2r.Autocomplete("r2r_from", options);
            var autocomplete2 = new r2r.Autocomplete("r2r_to", options);
    </script>
</center>

<!--Image carousel ends -->

<!--App functionality starts here -->
<div class="transitions_enabled" id="trips">
  <!--here we give functionality to our albums, we also set the size of our images -->
  <% @trips.each do |trip|   %>
    <div class="box panel panel-default">
      <%= link_to (image_tag trip.image.url(:medium)), trip %>
      <div class="panel-body">
        <h2>
          <%= link_to trip.title, trip %>
          <p class="user">
          <h6>Submited by </h6>

          </p>
        </h2>
      </div>
    </div>
  <% end %>
</div>
